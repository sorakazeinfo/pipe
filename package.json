{
  "name": "pipe",
  "version": "3.1.1",
  "description": "Pipe is CSS and JavaScript Framework",
  "main": "app.js",
  "scripts": {
    "build": "npm run build:css & npm run build.dev:css & npm run build:js",
    "build:css": "node-sass ./src/scss/pipe.scss ./dist/pipe.min.css --output-style compressed",
    "build.dev:css": "node-sass ./src/scss/pipe.scss ./dist/pipe.css --output-style expanded",
    "build:js": "webpack --config webpack.prod.js",
    "dev": "npm run dev:css & npm run dev:js",
    "dev:css": "node-sass ./src/scss/pipe.scss ./docs/dist/pipe.css --output-style expanded",
    "dev:js": "webpack --config webpack.dev.js",
    "watch:css": "node-sass ./src/scss/pipe.scss ./docs/dist/pipe.css --output-style expanded --watch",
    "watch:js": "webpack --config webpack.dev.js --watch"
  },
  "author": "Hyte Sorakaze",
  "license": "MIT",
  "suggests": {
    "smoothscroll-polyfill": "^0.4.4"
  },
  "devDependencies": {
    "node-sass": "^4.14.1",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {}
}
